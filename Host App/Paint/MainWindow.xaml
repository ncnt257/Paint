<Fluent:RibbonWindow x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Title="Paint" Height="450" Width="800"
                     Loaded="RibbonWindow_Loaded">
    <DockPanel>
        <Fluent:Ribbon DockPanel.Dock="Top">
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage Header="File"></Fluent:Backstage>
            </Fluent:Ribbon.Menu>

            <Fluent:RibbonTabItem Header="Home">
                <Fluent:RibbonGroupBox Header="Edit">
                    <Fluent:Button Header="Edit" Name="HomeEditButton" >

                    </Fluent:Button>
                    <Fluent:Button Header="Add" Name="HomeAddButton">
                    
                    </Fluent:Button>
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox Header="Shapes" Name="ShapeArea">
                    
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
        </Fluent:Ribbon>
        <Grid Background="#d3dceb">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Canvas Grid.Row="0" x:Name="Canvas" Background="White"  Margin="4,2,0,0">

            </Canvas>
            <Border Grid.Row="0" Background="Transparent" >
            </Border>
            <Grid Grid.Row="1" Background="#f0f0f0
" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0">1</Label>
                <Border Grid.Column="1" Grid.RowSpan="4" BorderBrush="#dbdbdb" 
                        BorderThickness="1,0,0,0" Background="{x:Null}" />
                <Label Grid.Column="1">2</Label>
                <Border Grid.Column="2" Grid.RowSpan="4" BorderBrush="#dbdbdb" 
                        BorderThickness="1,0,0,0" Background="{x:Null}" />
                <Label Grid.Column="2">3</Label>
            </Grid>
        </Grid>
    </DockPanel>
</Fluent:RibbonWindow>
